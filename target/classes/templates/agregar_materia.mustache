<!DOCTYPE html>
<html lang="es"></html>
<head>
    <meta charset="UTF-8">
    <title>Agregar Docente</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-2xl font-bold text-purple-500 text-center mb-6">Agregar Docente</h1>

    {{#successMessage}}
    <div class="bg-green-100 text-green-700 p-2 rounded mb-4">{{successMessage}}</div>
    {{/successMessage}}

    {{#errorMessage}}
    <div class="bg-red-100 text-red-700 p-2 rounded mb-4">{{errorMessage}}</div>
    {{/errorMessage}}

    <form action="/get_dicta" method="post" class="space-y-4">

    <div>
      <label class="block text-sm font-medium mb-1">Materia:</label>
      <select name="id_materia" required class="w-full p-2 border rounded">
        {{#materias}}
          <option value="{{id}}">{{nombre}}</option>
        {{/materias}}
      </select>
    </div>

    {{^materias}}
      <p class="text-gray-600">No hay materias cargados.</p>
    {{/materias}}

    <div>
      <label class="block text-sm font-medium mb-1">Docente:</label>
      <select name="dni_docente" required class="w-full p-2 border rounded">
        {{#profesores}}
          <option value="{{dni}}">{{realName}} {{surname}}</option>
        {{/profesores}}
      </select>
    </div>

    {{^docentes}}
      <p class="text-gray-600">No hay docentes cargados.</p>
    {{/docentes}}

      <button type="submit" class="w-full bg-purple-600 text-white py-2 rounded hover:bg-purple-700">Guardar Docente</button>

      <div class="text-center mt-4">
        <a href="/dashboard" class="text-pink-600 hover:underline">Volver al Panel de Control</a>
      </div>
    </form>
  </div>

</body>
</html>

