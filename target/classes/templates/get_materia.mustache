<!DOCTYPE html>
<html lang="es"></html>
<head>
    <meta charset="UTF-8">
    <title>Agregar Materia</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen p-4">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h1 class="text-2xl font-bold text-purple-500 text-center mb-6">Agregar Materia</h1>

    {{#successMessage}}
    <div class="bg-green-100 text-green-700 p-2 rounded mb-4">{{successMessage}}</div>
    {{/successMessage}}

    {{#errorMessage}}
    <div class="bg-red-100 text-red-700 p-2 rounded mb-4">{{errorMessage}}</div>
    {{/errorMessage}}

    <form action="/get_materia" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium mb-1">Id carrera:</label>
        <input type="number" name="id_carrera" required class="w-full p-2 border rounded" />
      </div>
      <div>
        <label class="block text-sm font-medium mb-1">Id materia:</label>
        <input type="number" name="id_materia" required class="w-full p-2 border rounded" />
      </div>
      <div>
        <label class="block text-sm font-medium mb-1">Nombre:</label>
        <input type="text" name="nombre" required class="w-full p-2 border rounded" />
      </div>
    
    <div>
      <label class="block text-sm font-medium mb-1">Docente:</label>
      <select name="id_docente" required class="w-full p-2 border rounded">
        {{#docentes}}
          <option value="{{id_docente}}">{{nombre}},{{apellido}}</option>
        {{/docentes}}
      </select>
    </div>

    {{^docentes}}
      <p class="text-gray-600">No hay docentes cargados.</p>
    {{/docentes}}

      <button type="submit" class="w-full bg-purple-600 text-white py-2 rounded hover:bg-purple-700">Guardar materia</button>
      <div class="text-center mt-4">
        <a href="/dashboard" class="text-pink-600 hover:underline">Volver al Panel de Control</a>
      </div>
    </form>
  </div>

</body>
</html>


